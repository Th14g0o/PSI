@model IEnumerable<Imobiliaria.Models.Imovel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New Imovel", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoId)
            </th>
            <th>Operação</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoId)
                </td>
                <td> @Html.DisplayFor(modelItem => item.Tipo.Nome)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ImovelId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ImovelId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ImovelId })
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Create New Tipo", "Create", "Tipos")
    </p>
</body>
</html>
